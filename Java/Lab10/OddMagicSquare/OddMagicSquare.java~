import java.util.Scanner;

public class OddMagicSquare 
{
  public static void main(String[] args) 
  {
    Scanner in = new Scanner(System.in);
    do 
    {
      System.out.println("Enter the number of rows and columns: ");
      final int N = in.nextInt();
    }
    while(N % 2 == 0);
  }
}